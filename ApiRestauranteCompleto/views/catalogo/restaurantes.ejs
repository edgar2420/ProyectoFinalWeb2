<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catálogo de Restaurantes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Catálogo de Restaurantes</h1>
        <div class="row">
            <% restaurantes.forEach(restaurante => { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="<%= restaurante.foto %>" class="card-img-top" alt="Foto del restaurante">
                        <div class="card-body">
                            <h5 class="card-title"><%= restaurante.nombre %></h5>
                            <p class="card-text"><%= restaurante.descripcion %></p>
                            <a href="/catalogo/restaurantes/<%= restaurante.id %>" class="btn btn-primary">Ver Hamburguesas</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
