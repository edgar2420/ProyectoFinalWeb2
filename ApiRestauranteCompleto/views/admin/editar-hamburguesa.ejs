<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Hamburguesa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Editar Hamburguesa</h1>

        <!-- Mostrar errores si existen -->
        <% if (errores) { %>
            <div class="alert alert-danger">
                <%= errores.mensaje %>
            </div>
        <% } %>

        <form action="/hamburguesas/editar/<%= hamburguesa.id %>" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre de la Hamburguesa</label>
                <input type="text" name="nombre" class="form-control" id="nombre" value="<%= hamburguesa.nombre %>" required>
            </div>

            <div class="mb-3">
                <label for="descripcion" class="form-label">Descripci√≥n</label>
                <textarea name="descripcion" class="form-control" id="descripcion" required><%= hamburguesa.descripcion %></textarea>
            </div>

            <div class="mb-3">
                <label for="foto" class="form-label">Foto Actual</label>
                <br>
                <img src="<%= hamburguesa.foto %>" alt="Foto de la Hamburguesa" width="200" class="mb-3">
                <br>
                <label for="foto" class="form-label">Subir Nueva Foto (opcional)</label>
                <input type="file" name="foto" class="form-control" id="foto" accept="image/*">
            </div>

            <div class="mb-3">
                <label for="precio" class="form-label">Precio</label>
                <input type="number" name="precio" class="form-control" id="precio" step="0.01" value="<%= hamburguesa.precio %>" required>
            </div>

            <div class="mb-3">
                <label for="restauranteId" class="form-label">Restaurante</label>
                <select name="restauranteId" id="restauranteId" class="form-control" required>
                    <% restaurantes.forEach(restaurante => { %>
                        <option value="<%= restaurante.id %>" <%= hamburguesa.restauranteId == restaurante.id ? 'selected' : '' %>><%= restaurante.nombre %></option>
                    <% }) %>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
