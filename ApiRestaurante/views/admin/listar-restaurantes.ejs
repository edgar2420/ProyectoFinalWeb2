<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Restaurantes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Lista de Restaurantes</h1>
        <a href="/restaurantes/crear" class="btn btn-primary mb-3">Agregar Restaurante</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Foto</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% restaurantes.forEach(restaurante => { %>
                    <tr>
                        <td><%= restaurante.nombre %></td>
                        <td><%= restaurante.direccion %></td>
                        <td><img src="<%= restaurante.foto %>" alt="Foto" width="100"></td>
                        <td><%= restaurante.descripcion %></td>
                        <td>
                            <a href="/restaurantes/editar/<%= restaurante.id %>" class="btn btn-warning btn-sm">Editar</a>
                            <form action="/restaurantes/eliminar/<%= restaurante.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
